<h1>Eat Da Burger!</h1>

<h2>Burgers Available!</h2>

<ul>
  {{#each burgers}}
    {{#unless devoured}}
      <span><strong> {{this.id}} - {{this.burger_name}} </strong></span>
      <button type="button" class="eatburger btn btn-warning" id ="eatbutton" data-id="{{this.id}}" data-newDevoured="{{devour}}">Devour!</span></button>
      <hr>
    {{/unless}}
  {{/each}}
</ul>

<h2>Devoured Burgers!</h2>

<ul>
  {{#each burgers}}
    {{#if devoured}}
      <span>{{this.burger_name}}</span>
      <hr>
    {{/if}}
  {{/each}}
</ul>

<h2>Add a Burger</h2>
<form class="create-form">

  <div class="form-group">
    <label for="bu">Burger Name:</label>
    <input type="text" id="bu" name="name">
  </div>

  <div class="form-group">
    <label for="devour">Devour?</label><br>
    <input type="radio" name="devoured" value="0" checked> Available!<br>
    <input type="radio" name="devoured" value="1"> Devoured
  </div>

  <button type="submit">Add Burger</button>
</form>
