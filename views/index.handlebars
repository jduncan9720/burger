<h1>Eat Da Burger!</h1>

<h2>Burgers Available!</h2>

<ul>
  {{#each burgers}}
    {{#unless this.devoured}}
      <span>{{this.burger_name}}</span>
    {{/unless}}
  {{/each}}
</ul>

<h2>Devoured Burgers!</h2>

<ul>
  {{#each burgers}}
    {{#if this.devoured}}
      <span>{{this.burger_name}}</span>
    {{/if}}
  {{/each}}
</ul>

<h2>Add a Burger</h2>
<form class="create-form">

  <div class="form-group">
    <label for="bu">Burger Name:</label>
    <input type="text" id="bu" name="name">
  </div>

  <div class="form-group">
    <label for="slee">Devour?</label><br>
    <input type="radio" name="devoured" value="0" checked> Available!<br>
    <input type="radio" name="devoured" value="1"> Devoured
  </div>

  <button type="submit">Add Burger</button>
</form>
